<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
UI_shared.xsd">
	<Script file="BuilderSpenderFrame.lua"/>

	<Frame name="BuilderSpenderFrame" virtual="true">
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="BarTexture" file="Interface\AddOns\Precognito\Textures\UI-StatusBar" hidden="true"/>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="LossGlowTexture" file="Interface\AddOns\Precognito\Textures\UI-StatusBar-Glow" hidden="true" alphaMode="ADD"/>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="GainGlowTexture" file="Interface\AddOns\Precognito\Textures\UI-StatusBar-Glow" hidden="true" alpha="0.75" alphaMode="ADD"/>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				MixinAndLoadScripts(self, "BuilderSpender")
			</OnLoad>
		</Scripts>
	</Frame>

	<Frame name="FullResourcePulseFrame" virtual="true">
		<Size x="119" y="12"/>
		<Scripts>
			<OnLoad>
				MixinAndLoadScripts(self, "FullResourcePulse")
			</OnLoad>
		</Scripts>
		<Frames>
			<Frame parentKey="SpikeFrame">
				<Size x="119" y="12"/>
				<Anchors>
					<Anchor point="TOPRIGHT"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">

						<Texture file="Interface\AddOns\Precognito\Textures\PlayerFrameFX" parentKey="BigSpikeGlow" alpha="0" alphaMode="BLEND">
							<Size x="27" y="34"/>
							<TexCoords left="0.0078125" right="0.21875" top="0.015625" bottom="0.546875"/>
							<Anchors>
								<Anchor point="RIGHT" x="21" y="0"/>
							</Anchors>
							<Animations>
								<AnimationGroup parentKey="SpikeAnim">
									<Alpha childKey="BigSpikeGlow" smoothing="NONE" duration="0" order="1" change="-1"/>
									<Alpha childKey="BigSpikeGlow" smoothing="IN" duration="0.25" order="1" change="1"/>
									<Scale childKey="BigSpikeGlow" smoothing="NONE" duration="0.1" order="1" scaleX="1.4" scaleY="0.75"> <Origin point="LEFT"/> <Offset x="2" y="0"/> </Scale>
									<Scale childKey="BigSpikeGlow" startDelay="0.2" smoothing="IN" duration="0.2" order="1" scaleX="0.357" scaleY="1.333"> <Origin point="LEFT"/> <Offset x="6" y="0"/> </Scale>
									<Alpha childKey="BigSpikeGlow" startDelay="0.3" duration="0.25" order="1" change="-1"/>
									<!-- <Scripts>
										<OnLoad>
											local tex = self:GetParent():GetParent().BigSpikeGlow
											tex:SetAlpha(0)
											tex:SetWidth(27)
    									    tex:SetHeight(34)
										</OnLoad>
										<OnPlay>
											local tex = self:GetParent():GetParent().BigSpikeGlow
											tex:SetAlpha(0)
											tex:Show()
										</OnPlay>
										<OnFinished>
											local tex = self:GetParent():GetParent().BigSpikeGlow
											tex:SetAlpha(0)
											tex:Hide()
										</OnFinished>
									</Scripts> -->
								</AnimationGroup>
							</Animations>
						</Texture>

						<Texture name="AlertSpikeStay" file="Interface\AddOns\Precognito\Textures\PlayerFrameFX" parentKey="AlertSpikeStay" alpha="0" alphaMode="BLEND">
							<Size x="34" y="18"/>
              				<TexCoords left="0.578125" right="0.84375" top="0.015625" bottom="0.296875"/>
							<Anchors>
								<Anchor point="RIGHT" x="11" y="0"/>
							</Anchors>
							<Animations>
								<AnimationGroup parentKey="SpikeAnim" setToFinalAlpha="true">
									<Alpha name="Spikey" childKey="AlertSpikeStay" smoothing="NONE" duration="0" order="1" change="-1"/>
									<Alpha name="Spikey" childKey="AlertSpikeStay" smoothing="IN" duration="0.25" order="1" change="1"/>
									<!-- <Scripts>
										<OnPlay>
											local tex = self:GetParent():GetParent().AlertSpikeStay
											tex:SetAlpha(0)
											tex:Show()
										</OnPlay>
										<OnFinished>
											local tex = self:GetParent():GetParent().AlertSpikeStay
											tex:SetAlpha(1)
											tex:Show()
										</OnFinished>
									</Scripts> -->
								</AnimationGroup>
							</Animations>
						</Texture>

					</Layer>
				</Layers>

				<Scripts>
					<OnLoad>
						local SpikeFrame = self
						self.SpikeAnim = {}
						self.SpikeAnim.Play = function()
							SpikeFrame.BigSpikeGlow.SpikeAnim:Play()
							SpikeFrame.AlertSpikeStay.SpikeAnim:Play()
						end
						self.SpikeAnim.Stop = function()
							SpikeFrame.BigSpikeGlow.SpikeAnim:Stop()
							SpikeFrame.AlertSpikeStay.SpikeAnim:Stop()
						end
						self.SpikeAnim.IsPlaying = function()
							local a = SpikeFrame.BigSpikeGlow.SpikeAnim:IsPlaying()
							local b = SpikeFrame.AlertSpikeStay.SpikeAnim:IsPlaying()
							return a or b
						end
					</OnLoad>
       			</Scripts>

			</Frame>

			<Frame parentKey="PulseFrame">
				<Size x="119" y="12"/>
				<Anchors>
					<Anchor point="TOPRIGHT"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">

						<Texture file="Interface\AddOns\Precognito\Textures\PlayerFrameFX" parentKey="YellowGlow" alpha="0" alphaMode="BLEND">
							<Size x="20" y="24"/>
							<TexCoords left="0.40625" right="0.5625" top="0.015625" bottom="0.59375"/>
							<Anchors>
								<Anchor point="RIGHT" x="-3" y="-1"/>
							</Anchors>
							<Animations>
								<AnimationGroup parentKey="PulseAnim" looping="REPEAT">
									<Alpha childKey="YellowGlow" duration="0" order="1" change="-1"/>
									<Alpha childKey="YellowGlow" duration="0.1" order="1" change="1"/>
									<Translation childKey="YellowGlow" smoothing="OUT" duration="0.5" order="1" offsetX="16" offsetY="0"/>
									<Alpha childKey="YellowGlow" startDelay="0.4" duration="0.1" order="1" change="-1"/>
								</AnimationGroup>
							</Animations>
						</Texture>

						<Texture file="Interface\AddOns\Precognito\Textures\PlayerFrameFX" parentKey="SoftGlow" alpha="0" alphaMode="BLEND">
							<Size x="20" y="24"/>
          				    <TexCoords left="0.234375" right="0.390625," top="0.015625" bottom="0.59375"/>
							<Anchors>
								<Anchor point="RIGHT" x="-1" y="-1"/>
							</Anchors>
							<Animations>
								<AnimationGroup parentKey="PulseAnim" looping="REPEAT">
									<Alpha childKey="SoftGlow" duration="0" order="1" change="-1"/>
									<Alpha childKey="SoftGlow" duration="0.1" order="1" change="1"/>
									<Translation childKey="SoftGlow" smoothing="OUT" duration="0.5" order="1" offsetX="16" offsetY="0"/>
									<Alpha childKey="SoftGlow" startDelay="0.4" duration="0.1" order="1" change="-1"/>
								</AnimationGroup>
							</Animations>
						</Texture>

					</Layer>
				</Layers>

				<Scripts>
					<OnLoad>
						local PulseFrame = self
						self.PulseAnim = {}
						self.PulseAnim.Play = function()
							PulseFrame.YellowGlow.PulseAnim:Play()
							PulseFrame.SoftGlow.PulseAnim:Play()
						end
						self.PulseAnim.Stop = function()
							PulseFrame.YellowGlow.PulseAnim:Stop()
							PulseFrame.SoftGlow.PulseAnim:Stop()
						end
						self.PulseAnim.IsPlaying = function()
							local a = PulseFrame.YellowGlow.PulseAnim:IsPlaying()
							local b = PulseFrame.SoftGlow.PulseAnim:IsPlaying()
							return a or b
						end
					</OnLoad>
				</Scripts>

			</Frame>
		</Frames>

		<Animations>
			<AnimationGroup parentKey="FadeoutAnim" setToFinalAlpha="true">
				<Alpha change="-1" duration="0.5" order="1"/>
				<Scripts>
					<OnFinished>
						self:GetParent().SpikeFrame.BigSpikeGlow:Hide()
						self:GetParent().SpikeFrame.AlertSpikeStay:Hide()

						self:GetParent().PulseFrame.PulseAnim:Stop()
						self:GetParent().SpikeFrame.SpikeAnim:Stop()
					</OnFinished>
				</Scripts>
			</AnimationGroup>
		</Animations>

	</Frame>

</Ui>
